<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CustomerMapper">

    <resultMap id="customerMap" type="pojo.Customer">
        <id column="customerid" property="id"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
    </resultMap>

    <select id="login" parameterType="pojo.Customer" resultMap="customerMap">
        select * from customer where name=#{name} and password=#{password}
    </select>

    <insert id="register" parameterType="pojo.Customer">
        insert into customer(name,password,email) values (#{name},#{password},#{email})
    </insert>
</mapper>